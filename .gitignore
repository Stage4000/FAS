# ========================================
# Configuration Files
# ========================================
# Protect production config file from updates
# The initial config.php with defaults is committed,
# but any local changes should not be overwritten
src/config/config.php.local
src/config/config.production.php

# Environment files
.env
.env.local
.env.production

# ========================================
# Database Files
# ========================================
# Protect SQLite database from being overwritten
# The initial empty database is committed,
# but any local data should persist through updates
database/flipandstrip.db.local
database/*.backup
database/backups/

# Keep the initial database structure in repo
# but ignore it if it has been modified locally
# Uncomment the line below after first deployment to prevent overwriting:
# database/flipandstrip.db

# SQL backup files
*.sql.backup
*.sql.gz

